view {
  box-sizing: border-box;
}
.navbar {
  width: 100vw;
  position: fixed;
  z-index: 4;
}

.navbar-container {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
}

.capsule {
  margin-left: 8px;
  height: 30px;
  border: 1rpx solid #f2f2f2;
  border-radius: 16px;
  display: flex;
  align-items: center;
}

.capsule > view {
  width: 36px;
  height: 60%;
  position: relative;
}

.capsule > view:nth-child(2) {
  border-left: 1rpx solid #f2f2f2;
}

.capsule image {
  width: 60%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.title-container {
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 0 100px;
  display: flex;
  align-items: center;
}
.title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.white {
  background-color: #fff;
  color: #333;
}

.black {
  background-color: #333;
  color: white;
}

.black .capsule {
  border: none;
  background-color: rgba(255, 255, 255, .65);
}

.black .capsule > view:nth-child(2) {
  border-left-color: rgba(0, 0, 0, .2);
}